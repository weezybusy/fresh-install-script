#!/bin/bash
apps='gcc valgrind make virtualenv python3-pip moc compton'
sudo apt -y install $apps
pip3 install --upgrade pip
pip3 install --user youtube-dl
git clone https://github.com/weezybusy/dotfiles.git ~/Templates/ditfiles
git clone https://github.com/morhetz/gruvbox.git ~/Templates/gruvbox
git clone https://github.com/weezybusy/tomorrow-theme.git ~/Templates/tomorrow
git clone https://github.com/PapirusDevelopmentTeam/papirus-icon-theme-gtk.git ~/Templates/papirus
ln -svf /media/$USER/stuff/mus/{salad,jazz,radio} ~/Music
ln -svf /media/$USER/work/{playground,salad,kr2,atbswp} ~/Documents
ln -svf ~/Templates/dotfiles/{.bash_aliases,.bashrc,.gitconfig,.vimrc,.Xresources,.tmux.conf} ~/
ln -svf ~/Templates/dotfiles/compton.conf ~/.config
ln -svf ~/Templates/dotfiles/ubuntu/lubuntu-rc.xml ~/.config/openbox
mkdir -p ~/.vim/colors
ln -svf ~/Templates/gruvbox/colors/* ~/.vim/colors
ln -svf ~/Templates/tomorrow/vim/colors/* ~/.vim/colors
mocp -S
cp -r /usr/share/moc/themes ~/.moc
ln -svf ~/Templates/dotfiles/ubuntu/config ~/.moc
chmod 644 ~/.moc/config
mkdir ~/.icons
ln -svf ~/Templates/papirus/Papirus-GTK ~/.icons
crontab -e
sudo vi /etc/rc.local
